    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/item_view_mark_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            android:text="地址:"
            app:layout_constraintLeft_toLeftOf="@+id/item_view_mark_states"
            app:layout_constraintTop_toBottomOf="@+id/item_view_MarkState" />

        <TextView
            android:id="@+id/item_view_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Title"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_view_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:text="新式開關"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/item_view_mark_type"
            app:layout_constraintTop_toTopOf="@+id/item_view_mark_type" />

        <TextView
            android:id="@+id/item_view_Press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:text="1.2"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/item_view_mark_press"
            app:layout_constraintTop_toTopOf="@+id/item_view_mark_press" />

        <TextView
            android:id="@+id/item_view_MarkState"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:text="良好"
            android:textAlignment="textStart"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/item_view_mark_markState"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_view_mark_markState"
            android:gravity="start" />

        <TextView
            android:id="@+id/item_view_mark_markState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="標示狀況:"
            app:layout_constraintLeft_toLeftOf="@+id/item_view_mark_states"
            app:layout_constraintStart_toStartOf="@+id/item_view_mark_hasMark"
            app:layout_constraintTop_toBottomOf="@+id/item_view_mark_hasMark" />

        <TextView
            android:id="@+id/item_view_mark_press"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="測壓:"
            app:layout_constraintLeft_toRightOf="@+id/item_view_mark_type"
            app:layout_constraintStart_toEndOf="@+id/item_view_type"
            app:layout_constraintTop_toTopOf="@+id/item_view_type" />

        <TextView
            android:id="@+id/item_view_MarkExist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="有設"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/item_view_mark_hasMark"
            app:layout_constraintTop_toTopOf="@+id/item_view_mark_hasMark"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/item_view_States"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:text="狀態"
            android:textAlignment="textStart"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toRightOf="@+id/item_view_mark_states"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_view_mark_states"
            android:gravity="start" />

        <TextView
            android:id="@+id/item_view_mark_hasMark"
            android:layout_width="49dp"
            android:layout_height="17dp"
            android:layout_marginTop="8dp"
            android:text="標示牌:"
            app:layout_constraintStart_toStartOf="@+id/item_view_mark_states"
            app:layout_constraintTop_toBottomOf="@+id/item_view_mark_states" />

        <TextView
            android:id="@+id/item_view_mark_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="型式:"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6" />

        <TextView
            android:id="@+id/item_view_mark_states"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            android:text="消防栓狀態:"
            app:layout_constraintLeft_toLeftOf="@+id/item_view_mark_type"
            app:layout_constraintTop_toBottomOf="@+id/item_view_type" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_view_Title"
            app:srcCompat="@drawable/line" />

        <TextView
            android:id="@+id/item_view_Dist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="0dp"
            android:text="仁愛區"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/item_view_mark_address"
            app:layout_constraintTop_toBottomOf="@+id/item_view_mark_address" />

        <TextView
            android:id="@+id/item_view_Vil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="0dp"
            android:text="龍安里"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/item_view_Dist"
            app:layout_constraintTop_toTopOf="@+id/item_view_Dist" />

        <TextView
            android:id="@+id/item_view_Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="0dp"
            android:text="成功一路86號"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/item_view_Vil"
            app:layout_constraintTop_toTopOf="@+id/item_view_Vil" />

        <TextView
            android:id="@+id/item_view_mark_ps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="備註:"
            app:layout_constraintLeft_toLeftOf="@+id/item_view_mark_address"
            app:layout_constraintTop_toBottomOf="@+id/item_view_trafficLevelSeekBar" />

        <TextView
            android:id="@+id/item_view_Ps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/item_view_mark_ps"
            app:layout_constraintTop_toTopOf="@+id/item_view_mark_ps"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/item_view_mark_duty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="轄區:"
            app:layout_constraintStart_toEndOf="@+id/item_view_MarkExist"
            app:layout_constraintTop_toTopOf="@+id/item_view_mark_hasMark"
            android:layout_marginLeft="50dp" />

        <TextView
            android:id="@+id/item_view_duty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TextView"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/item_view_mark_duty"
            app:layout_constraintTop_toTopOf="@+id/item_view_mark_duty"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/item_view_mark_trafficLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="道路寬度:"
            app:layout_constraintStart_toStartOf="@+id/item_view_mark_address"
            app:layout_constraintTop_toBottomOf="@+id/item_view_Address" />

        <TextView
            android:id="@+id/item_view_trafficLevelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/item_view_mark_trafficLevel"
            app:layout_constraintTop_toTopOf="@+id/item_view_mark_trafficLevel"
            android:layout_marginLeft="8dp" />

        <SeekBar
            android:id="@+id/item_view_trafficLevelSeekBar"
            style="@style/Widget.AppCompat.SeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:clickable="false"
            android:max="3"

            android:progress="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/item_view_mark_trafficLevel"
            app:layout_constraintTop_toBottomOf="@+id/item_view_trafficLevelText" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
